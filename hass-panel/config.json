{
  "name": "Hass Panel",
  "version": "v1.3.1",
  "slug": "hass_panel",
  "description": "一个基于 React 的智能家居控制面板",
  "url": "https://github.com/mrtian2016/hass-panel",
  "image": "ghcr.nju.edu.cn/mrtian2016/hass-panel",
  "arch": [
    "aarch64",
    "amd64",
    "armv7"
  ],
  "startup": "application",
  "boot": "auto",
  "auth_api": true,
  "hassio_api": true,
  "ingress": true,
  "ingress_stream": true,
  "panel_icon": "mdi:view-dashboard",
  "homeassistant_api": true,
  "init": false,
  "map": [
    "config:rw"
  ],
  "ports": {
    "5123/tcp": 5123
  },
  "ports_description": {
    "5123/tcp": "Web界面"
  },
  "webui": "http://[HOST]:[PORT:5123]",
  "options": {
    "hass_url": "http://homeassistant.local:8123",
    "hass_token": ""
  },
  "schema": {
    "hass_url": "str",
    "hass_token": "str"
  }
} 
