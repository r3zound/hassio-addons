{
  "name": "Hass Panel",
  "version": "v1.3.0",
  "slug": "hass_panel",
  "description": "一个基于 React 的智能家居控制面板",
  "url": "https://github.com/mrtian2016/hass-panel",
  "image": "ghcr.io/mrtian2016/hass-panel",
  "arch": [
    "aarch64",
    "amd64",
    "armv7"
  ],
  "startup": "application",
  "boot": "auto",
  "auth_api": true,
  "ingress": true,
  "ingress_port": 5123,
  "ingress_stream": true,
  "ingress_entry": "/",
  "panel_icon": "mdi:view-dashboard",
  "homeassistant_api": true,
  "init": false,
  "map": [
    "config:rw"
  ],
  "ports": {
    "5123/tcp": 5123,
    "5124/tcp": 5124
  },
  "ports_description": {
    "5123/tcp": "Web界面",
    "5124/tcp": "WebDAV"
  },
  "webui": "http://[HOST]:[PORT:5123]",
  "options": {
    "hass_url": "http://homeassistant.local:8123",
    "hass_token": "",
    "webdav_username": "admin",
    "webdav_password": "admin"
  },
  "schema": {
    "hass_url": "str",
    "hass_token": "str",
    "webdav_username": "str",
    "webdav_password": "str"
  }
} 
